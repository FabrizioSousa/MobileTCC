<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PrimeiraVersao.Views.Login"
            
             Title="{Binding Title}">

    <ContentPage.Content>
        
        <StackLayout Padding="0,50,0,50" BackgroundColor="Black"  >
            <Image Source="xamarin_logo.png" ></Image>
            <Label TextColor="Orange" Text=".crescedin"  FontSize="50" FontAttributes="Bold" HorizontalTextAlignment="Center">
            </Label>            
            <Label TextColor="Orange" Text="E-mail"  FontSize="30" FontAttributes="Bold"/>
            <Entry BackgroundColor="White" Keyboard="Email" x:Name="TxtEmail">
            </Entry>
            <Label TextColor="Orange" Text="Senha" FontSize="30" FontAttributes="Bold"/>
            <Entry BackgroundColor="White" x:Name="TxtSenha" IsPassword="true">
            </Entry>
            <Button BackgroundColor="Orange" x:Name="btnLogin" VerticalOptions="Center" Text="Login" Clicked="btnLogin_Clicked"/>
            <Button BackgroundColor="Orange" x:Name="bnEsqueciSenha" Clicked="bnEsqueciSenha_Clicked" Text="Esqueci minha senha"  />
            <Button BackgroundColor="Orange" x:Name="bnCadastro" Clicked="bnCadastro_Clicked" Text="Cadastrar usuário"  />

        </StackLayout>
    </ContentPage.Content>

</ContentPage>
